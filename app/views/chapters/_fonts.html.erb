<style>
<% font_ids(verses).each do |i| %>
  @font-face {
    font-family: 'p<%= i %>-v2';
    src: local(QCF200<%=i%>),
    url('<%= asset_pack_url "media/fonts/quran_fonts/v2/woff2/p#{i}.woff2" %>') format('woff2'),
    url('<%= asset_pack_url "media/fonts/quran_fonts/v2/woff/p#{i}.woff" %>') format('woff');
    font-display: swap;
  }

  @font-face {
    font-family: 'p<%= i %>-v1';
    src: url('<%= asset_pack_url "media/fonts/quran_fonts/v1/woff2/p#{i}.woff2"%>'),
    url('<%= asset_pack_url "media/fonts/quran_fonts/v1/woff/p#{i}.woff" %>') format('woff'),
    url('<%= asset_pack_url "media/fonts/quran_fonts/v1/ttf/p#{i}.ttf" %>') format('truetype');
    font-display: swap;
  }

  .p<%= i %>-v2{
    font-family: 'p<%=i%>-v2';
  }

  .p<%= i %>-v1{
    font-family: 'p<%=i%>-v1';
  }
<% end %>
</style>
