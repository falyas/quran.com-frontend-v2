<% verses =  @presenter.all %>
<%= render 'fonts', verses: verses %>

<% if @presenter.reading_mode? %>
  <% pages = verses.group_by(&:page_number) %>
  <%= render partial: 'page', collection: pages, as: :verses %>
<% else %>
  <%= render partial: 'verse', collection: verses, as: :verse %>
<% end %>
