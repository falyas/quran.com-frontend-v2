<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta property="og:locale" content="<%= current_locale %>">
<meta name="distribution" content="Global"/>

<link href="https://cdn.qurancdn.com" rel="preconnect" crossorigin>
<link href="https://audio.qurancdn.com" rel="preconnect" crossorigin>

<link rel="manifest" href="<%= static_manifest_path(format: :json) %>">
<link rel="search" type="application/opensearchdescription+xml" title="search Quran.com" href="<%= static_opensearch_path format: 'xml' %>">

<link href="<%= asset_pack_url('media/images/icons/favicon.ico') %>" title="Quran.com" type="image/x-icon" rel="shortcut icon" />
<link href="<%= asset_pack_url('media/images/icons/android-chrome-256x256.png') %>" title="Quran.com" type="image/png" rel="fluid-icon" />
<link href="<%= asset_pack_url('media/images/icons/safari-pinned-tab.svg') %>" title="Quran.com" type="image/x-icon" rel="mask-icon" color="theme-color" />
<link href="<%= asset_pack_url('media/images/icons/apple-touch-icon.png') %>" title="Quran.com" type="image/png" rel="apple-touch-icon" color="theme-color" />

<%
  set_meta_tags @presenter.open_graph_hash
%>

<%= display_meta_tags reverse: true, site: 'Quran.com'%>
<meta name="google" content="notranslate" />

<meta property="og:rich_attachment"     content="true">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@Quran">
<meta name="twitter:creator" content="@Quran">

<meta name="theme-color" content="#00acc1">
<meta name="mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-title" content="Quran.com">
<meta name="MobileOptimized" content="width" />
<meta name="HandheldFriendly" content="true" />
<meta name="format-detection" content="telephone=no">
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<meta name="application-name" content="Quran.com" />
<meta name="msapplication-TileImage" content="<%= asset_path 'icons/apple-touch-icon.png' %>">
<meta name="msapplication-TileColor" content="#00acc1">
<meta name="msapplication-config" content="<%= static_msapplication_config_url format: 'xml' %>">
<meta name="msapplication-tooltip" content="Quran.com" />
<meta name="msapplication-starturl" content="https://www.quran.com" />
<meta name="msapplication-navbutton-color" content="#00acc1" />
<meta name="rating" content="General">
<meta name="robots" content="all, index, follow, archive">
<meta name="revisit-after" content="30 days">

<!-- Global site tag (gtag.js) - Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=UA-8496014-1"></script>
<script>
    window.dataLayer = window.dataLayer || [];
    function gtag() {
        dataLayer.push(arguments);
    }
    gtag('js', new Date());
    gtag('config', 'UA-8496014-1');
    document.addEventListener('turbolinks:load', function (event) {
        if (typeof gtag === 'function') {
            gtag('config', 'UA-8496014-1', {
                'page_location': event.data.url
            });
        }
    });
</script>
